{
  "name": "franklin-sites",
  "description": "React and Zurb Foundation based design system for life sciences web applications",
  "version": "0.0.164",
  "main": "dist/franklin-components.js",
  "files": [
    "src",
    "dist",
    "assets"
  ],
  "types": "dist/types/components/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/ebi-uniprot/franklin.git",
  "author": "Xavier Watkins <xwatkins@ebi.ac.uk>",
  "license": "MIT",
  "scripts": {
    "build": "rm -r dist; yarn build-library && yarn build-types && yarn build-storybook",
    "build-library": "webpack",
    "build-types": "tsc --project tsconfig.declaration.json",
    "preanalyse": "yarn run build-library",
    "analyse": "webpack-bundle-analyzer dist/stats.json",
    "jest-coverage-ratchet": "jest-coverage-ratchet",
    "coverage-bump": "npm-run-all test:unit jest-coverage-ratchet",
    "test": "npm-run-all --continue-on-error test:*",
    "test:lint": "eslint 'src/**/*.[tj]s?' 'stories/**/*.[tj]s?' --cache --cache-location 'node_modules/.eslintcache'",
    "test:types": "tsc --project tsconfig.check.json",
    "test:unit": "jest --coverage",
    "test-watch": "jest --watch",
    "prerelease": "yarn test && yarn build",
    "release": "yarn publish && git push --follow-tags origin main",
    "start": "start-storybook -p 6006 -s ./assets",
    "build-storybook": "build-storybook -c .storybook -o .out -s ./assets",
    "prepare": "husky install"
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "IE 11"
  ],
  "jest": {
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 83.65,
        "statements": 83.3,
        "functions": 81.4,
        "branches": 72.2
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "transform": {
      "^.+\\.(jsx|js|tsx|ts)?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    },
    "testPathIgnorePatterns": [
      "/src/testHelpers/expectToThrowNoConsole.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js",
      "^lodash-es$": "lodash"
    },
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.+(ts|tsx|js|jsx|css|scss)": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "16.x || 17.x",
    "react-dom": "16.x || 17.x",
    "react-router-dom": "5.x"
  },
  "dependencies": {
    "classnames": "2.3.1",
    "d3": "5.16.0",
    "foundation-sites": "6.7.3",
    "history": "4.10.1",
    "lodash-es": "4.17.21",
    "lorem-ipsum": "2.0.4",
    "path": "0.12.7",
    "prop-types": "15.7.2",
    "query-string": "7.0.1",
    "react-copy-to-clipboard": "5.0.4",
    "react-markdown": "7.0.1",
    "rehype-raw": "6.1.0",
    "rheostat": "4.1.1",
    "timing-functions": "2.0.1",
    "type-fest": "2.3.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-private-methods": "7.14.5",
    "@babel/plugin-proposal-private-property-in-object": "7.15.4",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@storybook/addon-actions": "6.3.8",
    "@storybook/addon-info": "5.3.21",
    "@storybook/addon-knobs": "6.3.1",
    "@storybook/addon-links": "6.3.8",
    "@storybook/addons": "6.3.8",
    "@storybook/api": "6.3.8",
    "@storybook/builder-webpack5": "6.3.8",
    "@storybook/components": "6.3.8",
    "@storybook/manager-webpack5": "6.3.8",
    "@storybook/react": "6.3.8",
    "@svgr/webpack": "5.5.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.1",
    "@types/classnames": "2.3.1",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.3.0",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "babel-jest": "27.2.4",
    "babel-loader": "8.2.2",
    "browser-sync-webpack-plugin": "2.3.0",
    "core-js": "3.18.1",
    "css-loader": "6.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.5.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "jest-coverage-ratchet": "0.2.3",
    "jest-css-modules-transform": "4.3.0",
    "jest-silent-reporter": "0.5.0",
    "lint-staged": "11.1.2",
    "mkdirp": "1.0.4",
    "node-sass-json-importer": "4.3.0",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.0",
    "regenerator-runtime": "0.13.9",
    "sass": "1.42.1",
    "sass-loader": "12.1.0",
    "storybook-react-router": "1.0.8",
    "style-loader": "3.3.0",
    "svg-url-loader": "7.1.1",
    "typescript": "4.4.3",
    "webpack": "5.56.0",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.8.0"
  }
}
