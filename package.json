{
  "name": "franklin-sites",
  "description": "React and Zurb Foundation based design system for life sciences web applications",
  "version": "0.0.83",
  "main": "./dist/franklin-components.js",
  "files": [
    "src",
    "dist",
    "assets"
  ],
  "repository": "https://github.com/ebi-uniprot/franklin.git",
  "author": "Xavier Watkins <xwatkins@ebi.ac.uk>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-library && yarn build-storybook",
    "build-library": "webpack",
    "analyse": "webpack-bundle-analyzer dist/stats.json",
    "jest-coverage-ratchet": "jest-coverage-ratchet",
    "coverage-bump": "npm-run-all test:unit jest-coverage-ratchet",
    "test": "npm-run-all --continue-on-error test:*",
    "test:lint": "eslint 'src/**/*.ts*' 'src/**/*.js*' --ignore-pattern 'src/**/*.spec.ts*' --ignore-pattern 'src/**/*.spec.js*' --ignore-pattern 'src/**/*.json' --cache --cache-location 'node_modules/.eslintcache'",
    "test:types": "tsc",
    "test:unit": "jest --coverage",
    "test-watch": "jest --watch",
    "prerelease": "yarn test && yarn build",
    "release": "yarn publish && git push --follow-tags origin master",
    "start": "start-storybook -p 6006 --no-dll -s ./assets",
    "build-storybook": "build-storybook -c .storybook --no-dll -o .out -s ./assets"
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "IE 11"
  ],
  "jest": {
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 75,
        "statements": 75,
        "functions": 70,
        "branches": 65
      }
    },
    "transform": {
      "^.+\\.(jsx|js|tsx|ts)?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    },
    "testPathIgnorePatterns": [
      "/src/testHelpers/expectToThrowNoConsole.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js",
      "^lodash-es$": "lodash"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all test:lint test:types \"test:unit --silent --reporters='jest-silent-reporter' --bail\""
    }
  },
  "lint-staged": {
    "*.+(ts|tsx|js|jsx|css|scss)": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "d3": "5.16.0",
    "foundation-sites": "^6.5.3",
    "history": "^4.10.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "lodash-es": "^4.17.15",
    "lorem-ipsum": "^2.0.2",
    "path": "^0.12.7",
    "prop-types": "^15.6.2",
    "query-string": "^6.13.6",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.0.1",
    "rheostat": "^4.1.1",
    "timing-functions": "^2.0.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addons": "^6.0.28",
    "@storybook/api": "^6.0.28",
    "@storybook/components": "^6.0.28",
    "@storybook/react": "^6.0.27",
    "@svgr/webpack": "^5.0.0",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.0.4",
    "browser-sync-webpack-plugin": "^2.0.1",
    "css-loader": "^5.0.1",
    "eslint": "7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "6.2.0",
    "html-loader": "^1.3.1",
    "jest": "^26.6.1",
    "jest-coverage-ratchet": "0.2.3",
    "jest-css-modules-transform": "4.0.2",
    "jest-silent-reporter": "0.3.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "node-sass-json-importer": "4.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "^2.1.2",
    "random": "^2.2.0",
    "react-docgen": "^5.3.1",
    "react-test-renderer": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "sass-loader": "^10.0.5",
    "storybook-react-router": "^1.0.8",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^6.0.0",
    "typescript": "4.0.5",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "4.0.0",
    "webpack-cli": "^3.1.2"
  }
}
