{
  "name": "franklin-sites",
  "description": "React and Zurb Foundation based design system for life sciences web applications",
  "version": "0.0.56",
  "main": "./dist/franklin-components.js",
  "files": [
    "src",
    "dist",
    "assets"
  ],
  "repository": "https://github.com/ebi-uniprot/franklin.git",
  "author": "Xavier Watkins <xwatkins@ebi.ac.uk>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-library && yarn build-storybook",
    "build-library": "webpack --config webpack.library.js",
    "jslint": "./node_modules/.bin/eslint -c .eslintrc.json --ext .js --ext .jsx src",
    "test": "yarn jslint && jest",
    "test-watch": "jest --watch",
    "release": "yarn build && yarn publish && git push --follow-tags origin master",
    "start": "start-storybook -p 6006 -s ./assets",
    "build-storybook": "build-storybook -c .storybook -o .out -s ./assets"
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "IE 11"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1"
  },
  "dependencies": {
    "file-loader": "^2.0.0",
    "foundation-sites": "^6.5.3",
    "history": "^4.10.1",
    "lorem-ipsum": "^2.0.2",
    "path": "^0.12.7",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.9.0",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.0.1",
    "react-router-hash-link": "^1.2.2",
    "react-scrollspy": "^3.4.2",
    "rheostat": "^4.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.3.6",
    "@storybook/addon-info": "^5.3.6",
    "@storybook/addon-links": "^5.3.6",
    "@storybook/addons": "^5.3.6",
    "@storybook/api": "^5.3.6",
    "@storybook/components": "^5.3.6",
    "@storybook/react": "^5.3.6",
    "@svgr/webpack": "^5.0.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.1.4",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.24.5",
    "browser-sync-webpack-plugin": "^2.0.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.3",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.1",
    "prettier": "^1.19.1",
    "random": "^2.2.0",
    "react-docgen": "^4.1.0",
    "react-test-renderer": "^16.9.0",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "storybook-react-router": "^1.0.8",
    "style-loader": "^0.23.0",
    "svg-url-loader": "^3.0.2",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.1.2"
  }
}
